{
  "manifest_version": 3,
  "name": "Jisho To Anki",
  "description": "Adds buttons to Jisho.org that let you quickly add words into your Anki decks",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://jisho.org/search/*"
      ],
      "js": ["jisho-to-anki.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [ "https://jisho.org/search/*", "*://localhost/*" ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "jmdict-slim",
        "sentences"
      ],
      "matches": [
        "https://jisho.org/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
